# Jira Data Configuration
# Set VITE_USE_LIVE_DATA to 'true' to fetch real data from Jira, or 'false' to use mock data
VITE_USE_LIVE_DATA=false

# Jira API Configuration
# Your Jira instance URL (e.g., https://your-company.atlassian.net)
VITE_JIRA_BASE_URL=https://your-domain.atlassian.net

# Your Jira account email
VITE_JIRA_EMAIL=your-email@company.com

# Your Jira API token (generate at https://id.atlassian.com/manage-profile/security/api-tokens)
VITE_JIRA_API_TOKEN=your-api-token-here

# The ID of the Jira board to fetch sprint data from
# You can find this in the URL when viewing your board (e.g., /secure/RapidBoard.jspa?rapidView=123)
VITE_JIRA_BOARD_ID=123

# Optional: Custom field ID for story points (e.g., customfield_10016)
# If not provided, the application will attempt to auto-detect it from your board configuration
VITE_JIRA_STORY_POINTS_FIELD=customfield_10016
